<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.dndwiki.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/d20_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/frame"
            android:backgroundTint="#C6B2EA"
            android:onClick="@{() -> viewModel.onD20Clicked()}"
            android:src="@drawable/d20_svg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="16dp"
            android:maxLines="2"
            android:text="@string/spell_finder"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/d20_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/d20_button"
            app:layout_constraintTop_toTopOf="@+id/d20_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>